<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!user) { %>       
    <div>

      <form class="form-check form-check-inline" action="/login" method="GET">
        <div class="form-group mb-2">
          <button style="background-color: #28a745; border-color: #28a745;" type="submit" class="btn btn-primary">Login</button>
        </div>
      </form>

      <form class="form-check form-check-inline" action="/register" method="GET">
        <div class="form-group mb-2">
          <button style="background-color: #28a745; border-color: #28a745;" type="submit" class="btn btn-primary">Register</button>
        </div>
      </form>

    </div>
    <% } else { %> 
      <div>
        <form class="form-inline" action="/logout" method="POST">
          <div class="form-group mb-2">
            <p style="color:black; font-weight: 450; margin: 5px; margin-right: 20px;">Logged In As: <%= user.email %>!</p>
            <button style="background-color: #28a745; border-color: #28a745;" type="submit" class="btn btn-primary">Logout</button>
          </div>
        </form>
      </div>
    <% } %> 
  </nav>
</header>
